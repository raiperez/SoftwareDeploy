<% provide(:title, "Complete Season") %>

<div class="ui grid">
  <div class="fourteen wide column">
    <h1 class="ui center aligned">
        Season <%= @season.number %> Episodes
    </h1>
  </div>
  <div class="two wide column">
    <%= link_to 'Add Episode', new_episode_path(:season => @season.id), class: "ui fluid blue animated button"%>
  </div>
</div>

<div class="ui grid">
  <% @season.episode.each do |episode| %>
    <div class="four wide column">
      <div class="ui card" style="margin:10px 10px 10px 10px;">
        <% if true %>
          <div class="extra content">
            <div class="ui two buttons">
              <%= link_to 'Edit', edit_episode_path(episode.id), class: "ui basic green button" %>
              <%= link_to "Delete", episode_path(episode.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: "ui basic red button" %>
            </div>
          </div>
        <% end %>
        <div class="content">
          <div class="header"><%= episode.number %>: <%= episode.name %></div>
        </div>
        <div class="content">
          <h4 class="ui sub header">Summary</h4>
          <div class="ui small feed">
            <div class="event">
              <div class="content">
                <div class="summary">
                   Length: <%= episode.length %>
                </div>
              </div>
            </div>
            <div class="event">
              <div class="content">
                <div class="summary">
                   <%= episode.summary %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="ui divider"></div>
<div>
  <%= link_to 'Back to seasons', show_all_seasons_path(:series => @season.series), class: "ui fluid blue animated button"%>
</div>
