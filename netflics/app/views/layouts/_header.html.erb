<div class="ui fixed inverted menu" id="menu_header">
      <div class="ui container">
        <%= link_to "Netflics", root_path, id: "logo" %>
        <div class="right menu">
        <% if logged_in? %>
          <div class="ui dropdown item">
            <%= current_user.first_name =%>'s Account <i class="dropdown icon"></i>
            <div class="menu">
              <%= link_to "Profile & Statistics", current_user, class: "item" %>
              <%= link_to "Manage Children", current_user, class: "item" %>
              <%= link_to "Settings", '#', class: "item" %>
              <%= link_to "Log out", logout_path, method: "delete", class: "item" %>
            </div>
          </div>
        <% else %>
          <!-- <%= link_to "Home", root_path, class: "item" %> -->
          <%= link_to "Sign Up", signup_path, class: "item" %>
          <%= link_to "Log In", login_path, class: "item" %>
        <% end %>
        </div>
      </div>
    </div>

<script>$('.right.menu .ui.dropdown').dropdown();</script>
