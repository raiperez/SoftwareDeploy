<% provide(:title, "Home") %>

<% content_for :outer do %>
<style type="text/css">
  #main_container {
    margin-top: 0px!important;
    display: none;
  }
</style>
<!-- SERIES_HEADER_CONTAINER -->
<div class="ui fluid container" id="series_header_container">
<div class="ui fluid container" style="background-color: rgba(0,0,0,0.6);height: 100%;padding-top: 100px; padding-bottom: 60px;">

  <div class="ui container">
    <div class="ui three column grid">
      <div class="six wide column">
        <h1 class="ui mini inverted header">
          <div class="content logo_text">
            View Series!
          </div>
          <div class="sub header" style="font-size:0.8em;">
            <i>Browse through our great series database for the best chapters and reviews!</i>
          </div>
        </h1>
      </div>
      <div class="four wide column"></div>
      <div class="six wide column">
        <div class="ui raised right floated segment inverted center aligned" id="apply_segment">
          <h2 class="ui inverted icon header">
            <i class="chevron right icon"></i> <!-- file code outline -->
            <div class="content">
              Start browsing the greatest series database on the world!
            </div>
          </h2>
          <%= link_to "View Series!", show_all_series_path, class: "ui big blue button" %>
        </div>
      </div>
    </div>
  </div>

</div>
</div>
<!-- HEADER_CONTAINER -->
<!-- RECRUITERS CONTAINER -->
<div class="ui fluid container" id="news_header_container">
  <div class="ui container">
    <div class="ui three column grid">
      <div class="eight wide column">
        <img class="ui medium centered image" src="<%= image_url('news_icon.png') %>" style="height: 220px;width: 220px;">
      </div>
      <div class="two wide column">

      </div>
      <div class="six wide column">
        <h1 class="ui center aligned inverted header" id="apply_segment" style="border-radius:5px;padding:10px;">
          <div class="content logo_text">
            Latest News!
          </div>
          <div class="sub header" style="font-size:0.8em;">
            <i>Read all about the latest news regarding your favorite series and actors!</i>
          </div>
          <%= link_to "Get updated!", "#", class: "ui big blue button", style: "margin:2px;"%>
        </h1>
      </div>
    </div>
  </div>
</div>
<!-- RECRUITERS CONTAINER -->

<% end %>